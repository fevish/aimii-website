<header class="py-3">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center">
            <h1 class="h4 m-0" style="color: #00ff88;">{{ site.navigation.brand }}</h1>
            <nav>
                {% for link in site.navigation.links %}
                    {% if link.type == "button" %}
                        <a href="{{ link.url }}" class="btn btn-outline-primary">{{ link.text }}</a>
                    {% else %}
                        <a href="{{ link.url }}" class="nav-link">{{ link.text }}</a>
                    {% endif %}
                {% endfor %}
            </nav>
        </div>
    </div>
</header>